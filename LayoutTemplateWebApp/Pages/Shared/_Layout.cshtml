@model LayoutTemplateWebApp.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmparejaTecWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmparejaTecWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-colorMainTrans">
            <div class="container-fluid align-middle">
                <div class="align-middle">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        @* //This could be the link to the inicial app page *@
                        <i class="bi bi-mortarboard-fill"></i>
                        EmparejaTec
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @{
                        var option1IsActive = Context.Request.Path.Value.Contains("/Option1");
                        var option2IsActive = Context.Request.Path.Value.Contains("/Option2");
                    }

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item nav-item-header">
                            <a class="nav-link nav-link-header @(option1IsActive ? "active" : "")" asp-area="" asp-page="/Option1">Inicio</a>
                        </li>
                        <li class="nav-item nav-item-header">
                            <a class="nav-link nav-link-header @(option2IsActive ? "active" : "")" asp-area="" asp-page="/Option2">Editar Perfil</a>
                        </li>

                    </ul>
                </div>
                <div class="profileImage bg-footer text-center align-middle fs-3 text-white">
                    <i class="profileImage"></i>
                </div>
                <!-- Header -->
                <div class="header">
                    <a href="/Option2">
                        <img src="~/images/@Model.SelectedImage" id="profileImageHeader" width="90" style="margin: 80px;" />
                    </a>
                </div>
            </div>

        </nav>
    </header>


    <div class="page d-flex flex-row bg-grayContrast">
        <aside class="site-bar bg-white">
            <div class="container">
                <div class="row mb-3">
                    <a class="list-group-item text-center" href="#">
                        Solicitudes <span class="badge bg-colorMain notification">5</span>
                    </a>
                </div>
            </div>
            <ul class="nav nav-pills d-flex justify-content-center align-items-center m-2">
                <li class="nav-item">
                    <a class="nav-link active-tab" aria-current="page" href="#">Romance</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Amistad</a>
                </li>
            </ul>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center clickable chat">
                    <div class="profile-pic">
                        <img src="~/images/profile_pic/boy.png" alt="Profile Picture" class="img-fluid rounded-circle" width="32">
                    </div>
                    <div class="chat-content m-1">
                        <h6 class="mb-1">John Doe</h6>
                        <p class="mb-1 last-message">Nombres que pereza, ya no voy a hacer nada</p>
                    </div>
                    <div class="chat-details text-right">
                        <small>6:10pm</small>
                        <span class="badge bg-colorMain notification">3</span>
                    </div>
                </li>
            </ul>
        </aside>
        <div class="content-page w-100">
            <main role="main" class="pb-3 m-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="border-top footer text-muted ">
        <div class="container">
            EmparejaTec©2023
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>